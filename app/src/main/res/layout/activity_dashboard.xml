<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="104dp"
        android:layout_height="80dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/profilepic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/username"
        android:layout_width="151dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/border"
        android:gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="@color/bluenbk"
        android:textColorHint="@color/bluenbk"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView8"
        app:layout_constraintVertical_bias="0.0" />

    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/backdefault" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="118dp"
            android:layout_height="wrap_content"
android:textAlignment="textStart"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="256dp"
            android:layout_marginLeft="256dp"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginBottom="67dp"

            android:gravity="bottom"

            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="RtlCompat" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/front"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:src="@drawable/frontdefault" />


        <TextView
            android:id="@+id/accnum"
            android:layout_width="227dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="95dp"
            android:layout_marginLeft="95dp"
            android:layout_marginEnd="89dp"
            android:layout_marginRight="89dp"
            android:layout_marginBottom="37dp"


            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/user"
            android:layout_width="141dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="99dp"
            android:layout_marginLeft="99dp"
            android:layout_marginEnd="171dp"
            android:layout_marginRight="171dp"
            android:layout_marginBottom="89dp"

            android:gravity="bottom"

            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/expdate"
            android:layout_width="126dp"
            android:layout_height="wrap_content"

            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="200dp"
            android:layout_marginLeft="200dp"
            android:layout_marginEnd="85dp"
            android:layout_marginRight="85dp"
            android:layout_marginBottom="89dp"

            android:gravity="bottom"

            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="358dp"
        android:layout_height="307dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounddash"
        app:layout_constraintBottom_toTopOf="@+id/frameLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <FrameLayout
            android:layout_width="186dp"
            android:layout_height="157dp"
            android:layout_gravity="left"

            android:padding="10dp">

            <ImageView
                android:layout_width="171dp"
                android:layout_height="127dp"
                android:src="@drawable/ic_baseline_qr_code_24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Scan"
                android:textColor="@color/bluenbk"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/pay"
            android:layout_width="169dp"
            android:layout_height="154dp"
            android:layout_gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Pay"
                android:textColor="@color/bluenbk"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/promo"
            android:layout_width="182dp"
            android:layout_height="150dp"
            android:layout_gravity="left|bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/promotions" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Promotoions"
                android:textColor="@color/bluenbk"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="169dp"
            android:layout_height="154dp"
            android:layout_gravity="right|bottom">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/receive" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:text="Recieve"
                android:textColor="@color/bluenbk"
                android:textSize="20dp" />
        </FrameLayout>


    </FrameLayout>


    <FrameLayout

        android:id="@+id/frameLayout"
        android:layout_width="408dp"
        android:layout_height="83dp"
        android:background="@color/bluenbk"
        android:backgroundTint="@color/bluenbk"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/bluenbk">


            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="82dp"
                android:layout_height="74dp"
                android:layout_gravity="left"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:layout_toStartOf="@+id/imageView4"
                android:layout_toLeftOf="@+id/imageView4"
                android:src="@drawable/ic_baseline_location_on_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="96dp"
                android:layout_height="74dp"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="1dp"
                android:layout_toStartOf="@+id/imageView6"
                android:layout_toLeftOf="@+id/imageView6"

                android:src="@drawable/ic_baseline_search_24" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="99dp"
                android:layout_height="74dp"
                android:layout_gravity="bottom"
                android:layout_marginEnd="-1dp"
                android:layout_marginRight="-1dp"
                android:layout_marginBottom="1dp"
                android:layout_toStartOf="@+id/imageView7"
                android:layout_toLeftOf="@+id/imageView7"
                android:src="@drawable/ic_baseline_notifications_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="79dp"
                android:layout_height="73dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="29dp"
                android:layout_marginRight="29dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/ic_baseline_chat_24" />
        </RelativeLayout>

    </FrameLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="68dp"
android:background="@color/ramade"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintEnd_toStartOf="@+id/imageView8"
        app:layout_constraintHorizontal_bias="0.027"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>